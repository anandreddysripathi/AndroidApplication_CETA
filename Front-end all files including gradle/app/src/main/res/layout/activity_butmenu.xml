<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.anand.ytvolley.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:visibility="visible"
        app:logo="@drawable/events"
        app:title="View Events"
        android:background="#081d30"
        app:titleTextColor="#ffffff" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar4"
        android:background="#ffffff"
        android:drawableLeft="@drawable/coding"
        android:paddingLeft="17dp"
        android:paddingRight="180dp"
        android:text="CODING"
        android:textSize="20dp"
        android:textStyle="italic" />


    <Button
        android:id="@+id/v2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button"
        android:background="#ffffff"
        android:drawableLeft="@drawable/jam"
        android:paddingLeft="20dp"
        android:paddingRight="210dp"
        android:text="JAM"
        android:textSize="20dp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/v3"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/v2"
        android:drawableLeft="@drawable/ppt"
        android:paddingLeft="20dp"
        android:paddingRight="210dp"
        android:text="PPT"
        android:textSize="20dp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/v4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/v3"
        android:background="#ffffff"
        android:drawableLeft="@drawable/quiz"
        android:paddingLeft="20dp"
        android:paddingRight="210dp"
        android:text="QUIZ"
        android:textSize="20dp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/v6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/v4"
        android:background="#ffffff"
        android:drawableLeft="@drawable/project"
        android:paddingLeft="20dp"
        android:paddingRight="110dp"
        android:text="PROJECT EXPO"
        android:textSize="20dp"
        android:textStyle="italic" />


