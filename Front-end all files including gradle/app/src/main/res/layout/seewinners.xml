<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:visibility="visible"
        app:logo="@drawable/events"
        app:title="See Winners"
        android:background="#081d30"
        app:titleTextColor="#ffffff" />

    <TextView
        android:id="@+id/First"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar3"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="11dp"
        android:text="First Winner"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/roll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/First"
        android:layout_alignStart="@+id/First"
        android:layout_below="@+id/First"
        android:layout_marginTop="35dp"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/pots1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/roll1"
        android:layout_alignStart="@+id/roll1"
        android:layout_below="@+id/roll1"
        android:layout_marginTop="22dp"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/Second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pots1"
        android:layout_alignStart="@+id/pots1"
        android:layout_below="@+id/pots1"
        android:layout_marginTop="23dp"
        android:text="Second Winner"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/roll2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Second"
        android:layout_alignStart="@+id/Second"
        android:layout_below="@+id/Second"
        android:layout_marginTop="23dp"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/pots2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/roll2"
        android:layout_alignStart="@+id/roll2"
        android:layout_below="@+id/roll2"
        android:layout_marginTop="22dp"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/Third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pots2"
        android:layout_alignStart="@+id/pots2"
        android:layout_below="@+id/pots2"
        android:layout_marginTop="18dp"
        android:text="Third Winner"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/roll3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Third"
        android:layout_alignStart="@+id/Third"
        android:layout_below="@+id/Third"
        android:layout_marginTop="25dp"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/pots3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/roll3"
        android:layout_alignStart="@+id/roll3"
        android:layout_below="@+id/roll3"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textSize="18sp" />
</RelativeLayout>
